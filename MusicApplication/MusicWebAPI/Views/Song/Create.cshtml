@model MusicWebAPI.Models.Song

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
    @using (Html.BeginForm("Create", "Song", FormMethod.Post))
    {
        <div class="form-horizontal">
            <h4>Song</h4>
            <hr />
            <div class="form-group">
                <label>ID zing</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.IDZing, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <br />

            <div class="form-group">
                <label>Thể loại</label>
                <div class="col-md-10">
                    @Html.DropDownList("CategorySongID", (List<SelectListItem>)ViewBag.items, htmlAttributes: new { @class = "form-control" })
                </div>
            </div>
            <br />

            <div class="form-group">
                <label>Tên bài hát</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DisplayName, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <br />

            <div class="form-group">
                <label>Tiêu đề</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <br />

            <div class="form-group">
                <label>Code</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Code, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <br />

            <div class="form-group">
                <label>Tác giả</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ArtistsNames, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <br />

            <div class="form-group">
                <label>Trình diễn</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Performer, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <br />

            <div class="form-group">
                <label>Lyric</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Lyric, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <br />

            <div class="form-group">
                <label>Hình ảnh</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Thumbnail, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <br />

            <div class="form-group">
                <label>Thời gian</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Duration, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <br />

            <div class="form-group">
                <label>View count</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ViewCount, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <br />

            <div class="form-group">
                <label>URL</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.URL, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <br />

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Thêm" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</body>
</html>
